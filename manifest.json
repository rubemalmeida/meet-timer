{
    "manifest_version": 3,
    "name": "Google Meet Timer",
    "version": "1.0",
    "description": "A timer for Google Meet meetings that appears in the bottom-left corner",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://meet.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "timer.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Meet Timer Controls"
    },
    "background": {
        "service_worker": "background.js"
    }
}