{
    "manifest_version": 3,
    "name": "Google Meet Timer",
    "version": "1.1",
    "description": "A timer for Google Meet meetings and Google Slides presentations that appears in the top-left corner",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://meet.google.com/*",
        "https://docs.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://meet.google.com/*",
                "https://docs.google.com/presentation/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "timer.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Meet Timer Controls"
    },
    "background": {
        "service_worker": "background.js"
    }
}